<% unless notice.nil? %>
  <p class="alert_msg"><%= notice %></p>
<% end %>
<%= render "form", meal: @meal %>

<div id="meals">
  <% @meals.each do |meal| %>
    <% unless @day.include?(meal.created_at.strftime("%m/%d")) %>
      <% @day << meal.created_at.strftime("%m/%d") %>
      <strong><%= @day[-1] %></strong>
      <br />
    <% end %>

    <div class="meal_container">

      <%= render meal %>

    </div>
  <% end %>
</div>

